<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url"> jdbc:mysql://localhost:3306/RTP3602</property>
		<property name="hibernate.connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">1</property>
		<property name="hibernate.dialect"> org.hibernate.dialect.MySQL5Dialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		
		<mapping class="org.o2.registersvc.entity.AccountDetails"/>
		<mapping class="org.o2.registersvc.entity.ChannelDetails"/>
		<mapping class="org.o2.registersvc.entity.ClientDetails"/>
		<mapping class="org.o2.registersvc.entity.CustomerDetails"/>
	</session-factory>
</hibernate-configuration>