<!DOCTYPE html>
<html ng-app>
	<form name="myForm">
		<label>Uname.</label>&emsp;&emsp;&emsp;&emsp;&emsp;
		<input type="text"
			   name="uname"
			   ng-model="uname"
			   ng-minlength="3"
			   ng-maxlength="6"
			   required>
		<h5 style="color:red" ng-if="myForm.uname.$error.required && 
									 myForm.uname.$dirty">
				***Can't Left Blank***
		</h5>		   
		<h5 style="color: red;" ng-if="myForm.uname.$error.minlength">
				***Minimum 3 characters are required***
		</h5>
		<h5 style="color: red;" ng-if="myForm.uname.$error.maxlength">
			***Maximum 6 characters are allowed
		</h5>
		<br><br>
		
		<!--  Email Validation -->
		<label>Email.</label>&emsp;&emsp;&emsp;&emsp;&emsp;
		<input type="email"
			   name="uemail"
			   ng-model="uemail"	
			   required>
		<h5 style="color:red" ng-if="myForm.uemail.$error.required && myForm.uemail.$dirty">
			***Can't Left Blank***
		</h5>	   
		<h5 style="color: red;" ng-if="myForm.uemail.$error.email">
			***Please Enter Valid Email***
		</h5>
		<br><br>
		
		<!-- Phone -->
		<label>Phone.</label>&emsp;&emsp;&emsp;&emsp;&emsp;
		<input type="text"
			   name="uphone"
			   ng-model="uphone"
			   ng-pattern="/^\+?\d{2}[- ]?\d{3}[- ]?\d{5}$/"
			   required>
		<h5 style="color: red;" ng-if="myForm.uphone.$error.required && myForm.uphone.$dirty">
			***Can't Left Blank***		
		</h5>
		<h5 style="color: red;" ng-if="myForm.uphone.$error.pattern">
			***Please Enter Valid Phone Number
		</h5>
	</form>
	<script type="text/javascript" src="angular.min.js"></script>
</html>






